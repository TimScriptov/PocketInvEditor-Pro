<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.mcal.pocketinveditor.pro">
	<!-- Изменение/удаление данных на USB-накопителе -->
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<application
		android:requestLegacyExternalStorage="true"
		android:theme="@style/AppTheme"
		android:label="@string/app_name"
		android:icon="@mipmap/ic_launcher"
		android:roundIcon="@mipmap/ic_launcher_round">
		<activity
			android:label="@string/app_name"
			android:name=".PocketInvEditorProActivity">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
				<category
					android:name="android.intent.category.MULTIWINDOW_LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".EditorProActivity" />
		<activity
			android:name="com.mcal.pocketinveditor.InventorySlotsActivity" />
		<activity
			android:name="com.mcal.pocketinveditor.EditInventorySlotActivity" />
		<activity
			android:name="com.mcal.pocketinveditor.BrowseItemsActivity" />
		<activity
			android:name="com.mcal.pocketinveditor.WorldInfoActivity" />
		<activity android:name=".EntitiesEditActivity" />
		<activity android:name=".TileEntityEditActivity" />
		<activity
			android:name="com.mcal.pocketinveditor.ChestSlotsActivity" />
		<activity
			android:label="@string/edit_sign"
			android:name=".EditSignActivity" />
		<activity android:name=".EditNetherReactorActivity" />
		<activity android:name=".EditMobSpawnerActivity" />
		<activity android:name=".EditTerrainActivity" />
		<activity
			android:label="@string/terrain_block_counts"
			android:name=".BlockCountsActivity" />
		<activity android:name=".ChooseBlockActivity" />
		<activity android:name=".ChooseReplaceBlockActivity" />
		<activity android:name=".BrowseBlocksActivity" />
		<activity
			android:name="com.mcal.pocketinveditor.LoadoutExportActivity" />
		<activity
			android:name="com.mcal.pocketinveditor.LoadoutImportActivity" />
		<activity android:name=".ChooseRadiusMaterialActivity" />
		<activity
			android:name="com.mcal.pocketinveditor.ArmorSlotsActivity" />
		<activity
			android:name="com.mcal.pocketinveditor.AboutAppActivity" />
		<activity
			android:name="com.ipaulpro.afilechooser.FileChooserActivity" />
		<meta-data
			android:name="com.sec.android.support.multiwindow"
			android:value="true" />
		<meta-data
			android:name="com.sec.minimode.icon.portrait.normal"
			android:resource="@mipmap/ic_launcher" />
		<meta-data
			android:name="com.sec.minimode.icon.landscape.normal"
			android:resource="@mipmap/ic_launcher" />
	</application>
</manifest>

